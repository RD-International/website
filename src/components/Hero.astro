---
import { siteConfig } from '@/site-config'
import PromotionalVideo from '@/assets/videos/promotional.mp4'
const { featured } = Astro.props

const base = import.meta.env.BASE_URL
---

<div class='bg-gray-900'>
	<div class='relative isolate w-full overflow-hidden pt-32 sm:pt-10'>
		<div class='w-full'>
			<video
				src={PromotionalVideo}
				autoplay
				muted
				loop
				class='absolute w-full inset-0 h-full -z-10 object-cover'></video>
		</div>
		<div
			class='absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80'
			aria-hidden='true'
		>
			<div
				class='relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-teal-400 to-teal-800 opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]'
				style='clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)'
			>
			</div>
		</div>
		<div class='mx-auto max-w-7xl px-6 lg:px-8 bg-gradient-to-b from-transparent'>
			<div class='mx-auto max-w-2xl py-32 sm:py-48 lg:py-56'>
				<div class='hidden sm:mb-8 sm:flex sm:justify-center'>
					<div
						class='relative rounded-full px-3 py-1 text-sm/6 text-gray-200 ring-1 ring-white/10 hover:ring-white/20 bg-slate-900/30'
					>
						Announcing our latest
						<span class='font-bold text-teal-400'> {featured[0].data.title} Tour</span>
						<a href=`${base}/tours/${featured[0].slug}` class='font-semibold text-white'
							><span class='absolute inset-0' aria-hidden='true'></span>Learn more <span
								aria-hidden='true'>&rarr;</span
							></a
						>
					</div>
				</div>
				<div class='text-center'>
					<h1 class='text-balance text-5xl font-semibold tracking-tight text-white sm:text-7xl'>
						Your Halal
						<span class='text-teal-300'> Tourism</span>
						Expert
					</h1>
					<p class='mt-8 text-pretty text-lg font-medium text-gray-300 sm:text-xl/8'>
						Crafting <span class='text-yellow-400'>unforgettable</span> Travel Experiences, Aligned with
						Your Values
					</p>
					<div class='mt-10 flex items-center justify-center gap-x-6'>
						<a
							href=`${base}/tours`
							class='rounded-md bg-teal-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teal-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-400'
							>Browse our tours</a
						>
						<a href=`${base}/about` class='text-sm/6 font-semibold text-white'
							>Learn more <span aria-hidden='true'>&rarr;</span></a
						>
					</div>
				</div>
			</div>
		</div>
		<div
			class='absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]'
			aria-hidden='true'
		>
			<div
				class='relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-teal-800 to-teal-400 opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]'
				style='clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)'
			>
			</div>
		</div>
	</div>
</div>
