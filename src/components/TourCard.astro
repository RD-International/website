---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'
import { Clock, DollarSign, Hourglass, User, Users } from 'lucide-astro'
import StarReview from './StarReview.astro'

const {
	id,
	data: {
		title,
		description,
		pubDate,
		heroImage,
		category,
		price,
		country,
		duration,
		minPeopleCount,
		city
	},
	readTime,
	slug
} = Astro.props

const base = import.meta.env.BASE_URL
---

<article
	class='grid grid-rows-[300px_1fr_auto] md:grid-rows-[300px_1fr_auto] min-h-full group border rounded-md relative'
>
	<a class='relative overflow-hidden' href=`${base}tours/${slug}/`>
		<Image
			src={heroImage}
			width={600}
			height={200}
			format='webp'
			class='h-full min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-t'
			alt={`img of ${title}`}
		/>

		<div class='z-30 absolute bottom-0 w-full h-14'>
			<div class='-z-10 absolute bottom-0 glass w-full min-h-full'></div>
			<div class='flex items-center justify-between gap-x-1 text-white px-3 h-full'>
				<div class='font-sans text-teal-100 flex items-baseline font-bold'>
					<DollarSign class='w-5' />
					<span class='text-3xl'>
						{price}
					</span>

					<span class='text-xl'> .00</span>
				</div>
				<div class='flex items-center gap-2'>
					<span
						class='flex text-sm whitespace-nowrap overflow-hidden gap-1 items-center rounded-md bg-teal-400/50 px-2 py-1 text-md font-medium text-teal-200 ring-1 ring-inset ring-teal-400/20 overflow-ellipsis'
					>
						{duration}
						<Hourglass class='w-4' />
					</span>

					<span
						class='inline-flex gap-1 items-center rounded-md bg-teal-400/50 px-2 py-1 text-md font-medium text-teal-200 ring-1 ring-inset ring-teal-400/20'
					>
						{minPeopleCount}
						<User class='w-4' />
					</span>
				</div>
			</div>
		</div>
	</a>

	<div class='flex flex-col gap-4 md:gap-0 py-4 pl-1'>
		<div class='flex flex-col gap-3 px-2 flex-grow'>
			<div class='flex items-center gap-4'>
				<a class='text-2xl font-semibold -tracking-wider' href=`${base}tours/${slug}/`>
					<div class='min-h-[3.5rem] line-clamp-3 overflow-hidden'>
						{title}
					</div>
				</a>
			</div>
	
			<p
				class='overflow-hidden line-clamp-3 text-gray-700 mb-5 font-[400] md:pr-[15%]'
			>
				{description}
			</p>
		</div>
	
		<footer class='flex items-center px-2'>
			<a
				href=`${base}tours/${slug}/`
				class='flex items-center gap-2 rounded-md bg-teal-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600'
				aria-label={`go to ${title}`}
			>
				Browse Tour <span
					class='mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out'
					><ArrowUp width='18' height='18' /></span
				>
			</a>
		</footer>
	</div>
</article>