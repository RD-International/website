---
import { siteConfig } from '@/site-config'
import Image1 from '@/assets/images/1.jpg'
import Image2 from '@/assets/images/2.jpg'
import Image3 from '@/assets/images/3.jpg'
import Image4 from '@/assets/images/4.jpg'
import { Image } from 'astro:assets'

const base = import.meta.env.BASE_URL
---

<div class='overflow-hidden py-24 pb-40 bg-gradient-to-br from-blue-400/30 to-teal-400/30'>
	<div class='mx-auto max-w-7xl px-6 lg:flex lg:px-8'>
		<div
			class='mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:min-w-full lg:max-w-none lg:flex-none lg:gap-y-8'
		>
			<div class='lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8'>
				<h2 class='text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl'>
					WHEREVER YOU WANT TO GO, WE'LL HELP YOU GET THERE.
				</h2>

				<p class='mt-6 text-xl/8 text-gray-600'>
					RD International provides reliable, tailored travel solutions for Muslim travelers,
					promoting meaningful experiences and halal tourism by collaborating with trusted partners
					and offering destinations aligned with Islamic principles.
				</p>
				<p class='mt-6 text-base/7 text-gray-600'>
					Start your adventure today and let us guide you to the exotic wonders of Southeast Asia
					and beyond!
				</p>
				<div class='mt-10 flex'>
					<a
						href=`${base}/tours`
						class='rounded-md bg-teal-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-400'
						>Book Your Dream Vacation Now!</a
					>
				</div>
			</div>
			<div class='hidden sm:flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents'>
				<div class='w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end'>
					<Image
						src={Image2}
						alt=''
						class='aspect-[6/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover'
					/>
				</div>
				<div
					class='contents lg:col-span-2 lg:col-end-2 lg:ml-auto lg:flex lg:w-[37rem] lg:items-start lg:justify-end lg:gap-x-8'
				>
					<div class='order-first flex w-64 flex-none justify-end self-end lg:w-auto'>
						<Image
							src={Image1}
							alt=''
							class='aspect-[4/3] w-[24rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover'
						/>
					</div>
					<div class='flex w-96 flex-auto justify-end lg:w-auto lg:flex-none'>
						<Image
							src={Image3}
							alt=''
							class='aspect-[7/5] w-[37rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover'
						/>
					</div>
					<div class='hidden sm:block sm:w-0 sm:flex-auto lg:w-auto lg:flex-none'>
						<Image
							src={Image4}
							alt=''
							class='aspect-[4/3] w-[24rem] max-w-none rounded-2xl bg-gray-50 object-cover'
						/>
					</div>
				</div>
			</div>

			<div
				class='flex flex-col sm:hidden flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents'
			>
				<Image src={Image2} alt='' class='w-full rounded-2xl bg-gray-50 object-cover' />
				<Image src={Image1} alt='' class='w-full rounded-2xl bg-gray-50 object-cover' />
				<Image src={Image3} alt='' class='w-full rounded-2xl bg-gray-50 object-cover' />
				<Image src={Image4} alt='' class='w-full rounded-2xl bg-gray-50 object-cover' />
			</div>
		</div>
	</div>
</div>
