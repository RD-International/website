---
import { Image } from 'astro:assets'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	data: { name, coverImage, description },
	slug
} = Astro.props

const base = import.meta.env.BASE_URL
---

<article class='grid group border rounded-md relative'>
	<a class='relative overflow-hidden' href=`${base}/countries/${slug}/`>
		<Image
			src={coverImage}
			format='webp'
			class='h-[12.25rem] min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-t'
			alt={`img of ${name}`}
		/>
	</a>

	<div class='flex justify-start h-full flex-col gap-4 md:gap-0 pl-1'>
		<footer class='pb-2'>
			<div class='flex justify-between items-center px-2 py-2 pb-3'>
				<div>
					<h1 class='font-semibold text-xl text-gray-600 capitalize'>
						{name}
					</h1>
				</div>
				<a
					href=`${base}countries/${slug}/`
					class='flex items-center gap-2 rounded-md bg-teal-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600'
					aria-label={`go to ${name}`}
				>
					Browse Cities <span
						class='mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out'
						><ArrowUp width='18' height='18' /></span
					>
				</a>
			</div>
			<p class='w-fit h-20 overflow-hidden text-ellipsis pl-1.5 text-start text-sm text-gray-500'>
				{description}
			</p>
		</footer>
	</div>
</article>
