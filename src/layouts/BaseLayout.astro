---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import EditInCMS from '@/components/EditInCMS'
import Logo from '@/assets/images/logo.png'
const { title, description, image = Logo.src, articleDate } = Astro.props
const { center = true } = Astro.props
---

<html lang='en' class='scroll-smooth'>
	<head>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
	</head>

	<body class='bg-white text-stone-950 dark:bg-white'>
		<main
			class:list={[
				{ 'px-5  sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 md:max-w-6xl grid gap-12': center },
				' antialiased  pt-24 mt-4 overflow-hidden md:overflow-visible'
			]}
		>
			<Header />
			<slot />
			<Footer />
		</main>
		<TwSizeIndicator />
		<EditInCMS />
	</body>
</html>
