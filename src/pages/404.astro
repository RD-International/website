---
import BaseLayout from '@/layouts/BaseLayout'
import { Image } from 'astro:assets'
import IslandImage from '@/assets/images/1.jpg'
import { siteConfig } from '@/data/site.config'
---

<!--
  This example requires updating your template:

  ```
  <html class="h-full">
  <body class="h-full">
  ```
-->
<BaseLayout>
	<div
		class='grid min-h-full grid-cols-1 grid-rows-[1fr_auto_1fr] bg-white lg:grid-cols-[max(50%,36rem)_1fr]'
	>
		<main
			class='mx-auto w-full max-w-7xl px-6 py-24 sm:py-32 lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:px-8'
		>
			<div class='max-w-lg'>
				<p class='text-base/8 font-semibold text-teal-600'>404</p>
				<h1
					class='mt-4 text-pretty text-5xl font-semibold tracking-tight text-gray-900 sm:text-6xl'
				>
					Page not found
				</h1>
				<p class='mt-6 text-pretty text-lg font-medium text-gray-500 sm:text-xl/8'>
					Sorry, we couldn’t find the page you’re looking for.
				</p>
				<div class='mt-10'>
					<a href=`${siteConfig.base}/` class='text-sm/7 font-semibold text-teal-600'
						><span aria-hidden='true'>&larr;</span> Back to home</a
					>
				</div>
			</div>
		</main>
		<footer class='self-end lg:col-span-2 lg:col-start-1 lg:row-start-3'>
			<div class='border-t border-gray-100 bg-gray-50 py-10'>
				<nav
					class='mx-auto flex w-full max-w-7xl items-center gap-x-4 px-6 text-sm/7 text-gray-600 lg:px-8'
				>
					<a href='#'>Contact support</a>
					<svg viewBox='0 0 2 2' aria-hidden='true' class='size-0.5 fill-gray-300'>
						<circle cx='1' cy='1' r='1'></circle>
					</svg>
					<a href='#'>Status</a>
				</nav>
			</div>
		</footer>
		<div
			class='hidden lg:relative lg:col-start-2 lg:row-start-1 lg:row-end-4 lg:block bg-gradient-to-br from-teal-800 to-blue-400'
		>
			<Image
				src={IslandImage}
				alt=''
				class='object-cover absolute inset-0 size-full h-full opacity-80'
			/>
		</div>
	</div>
</BaseLayout>
